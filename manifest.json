{
  "manifest_version": 2,

  "name": "xkcd substitutions",
  "description": "This extension replaces text based on http://xkcd.com/1288/",
  "version": "1.0",

  "background_page": "background.html",
  "permissions": [
    "tabs", "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["replace.js"],
      "run_at": "document_end"
    }
  ]
}
